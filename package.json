{
  "name": "react-starter-2018",
  "version": "1.0.0",
  "description": "react starter",
  "main": "src/index.js",
  "author": "Sam Wang",
  "license": "MIT",
  "scripts": {
    "start": "node_modules/.bin/webpack-dev-server --env.env=dev --config build/webpack.config.js",
    "dev": "yarn start --env.addons=bundleanalyzer",
    "lint": "eslint src/**/*.js --ignore-pattern '/test.js/'",
    "clean": "rimraf dist",
    "test": "ava --tap | tap-difflet",
    "coverage": "nyc ava --tap | tap-difflet",
    "build": "cross-env NODE_ENV=production webpack -p --env.env=prod --config build/webpack.config.js",
    "deploy": "yarn build --env.addons=bundleanalyzer",
    "generate": "plop --plopfile build/generators/index.js"
  },
  "ava": {
    "files": "src/**/*.test.js",
    "tap": true,
    "require": [
      "babel-core/register"
    ],
    "babel": {
      "testOptions": {
        "babelrc": false,
        "presets": [
          "@babel/preset-react"
        ]
      }
    }
  },
  "dependencies": {
    "animate.css": "^3.6.1",
    "axios": "^0.18.0",
    "bootstrap": "^4.0.0",
    "classnames": "^2.2.5",
    "deep-equal": "^1.0.1",
    "fastclick": "^1.0.6",
    "font-awesome": "^4.7.0",
    "history": "^4.7.2",
    "immutable": "^3.8.2",
    "jquery": "^3.3.1",
    "normalize.css": "^8.0.0",
    "popper.js": "^1.14.1",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-deep-force-update": "^2.1.1",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "reactstrap": "^5.0.0",
    "redbox-react": "^1.5.0",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.9.1",
    "redux-promise-middleware": "^5.0.0",
    "redux-saga": "^0.16.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0-beta.44",
    "autoprefixer": "^8.2.0",
    "ava": "^1.0.0-beta.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.3.2",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.1.0",
    "node-sass": "^4.8.3",
    "nyc": "^11.6.0",
    "plop": "^2.0.0",
    "postcss-loader": "^2.1.3",
    "react-hot-loader": "^4.0.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "tap-difflet": "^0.7.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shuson/react-starter-2018.git"
  },
  "bugs": {
    "url": "https://github.com/shuson/react-starter-2018/issues"
  },
  "keywords": [
    "react 16",
    "webpack 4"
  ]
}
